---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PageLayout from "@/layouts/Base.astro";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">A Billion Dollar Problem, Every Episode</h1>
		<p class="mb-4">
			I Got 99 Problems is the podcast for curious and ambitious individuals. Every episode will
			dive into a real-world problem whose solution can reasonably be expected to generate a billion
			dollars. The best part? We believe that each problem we present can be solved by a small team
			(or individual) with limited capital and can get to an MVP within a few months.
		</p>
		<a href="/igot99problems/about" class="cactus-link inline-block">Find out more</a>
		<h2 class="title mb-4 mt-12 text-xl">Connect</h2>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-12">
		<h2 class="title mb-4 text-xl">Recent Episodes</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map(
					(p, index) =>
						index < 10 && (
							<li class="flex flex-col gap-x-2 sm:flex-row">
								<PostPreview post={p} />
							</li>
						),
				)
			}
		</ul>
	</section>
</PageLayout>
